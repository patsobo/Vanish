{
    while(!place_meeting(x+sign(vel_x),y,obj_wall))
    {
        x += sign(vel_x);
    }
    vel_x = 0;
}
x+=vel_x;


if(place_meeting(x,y+vel_y,obj_wall))
{
    while(!place_meeting(x,y+sign(vel_y),obj_wall))
    {
